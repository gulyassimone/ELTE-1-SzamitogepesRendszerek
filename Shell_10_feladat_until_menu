menupont=1
echo $menupont

until [ $menupont -eq 3 ]
do
	clear
	echo Valasszon!
	echo 1. Elso menupont
	echo 2. Masodik menupont
	echo 3. kilepes
	read menupont

	case $menupont in
		1) echo On az elso menupontot valasztotta
		;;
		2) echo On a masodik menupontot valasztotta
		;;
		3) echo On a harmadik menupontot valasztotta
		;;
		*) echo Nem megfelelo bemenet
		;;
	esac	

	sleep 2
done